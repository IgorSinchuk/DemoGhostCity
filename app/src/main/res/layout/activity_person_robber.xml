<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    tools:context="com.nonexistentware.igor.demoghostcity.PersonRobber">

    <TextView
        android:id="@+id/storyName"
        android:text="[Crime story]"
        android:textColor="@color/color_white"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bulletInt"
        android:gravity="right"
        android:textColor="@color/color_white"
        android:text="Bullets X6"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dialogueConsole"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storyName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/nextBtn"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bulletInt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="[продолжить]"
        android:textColor="@color/color_white" />

</RelativeLayout>
